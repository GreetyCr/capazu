---
export interface Props {
  title: string;
  subtitle?: string;
  highlight?: string;
  centered?: boolean;
  className?: string;
}

const { 
  title, 
  subtitle, 
  highlight,
  centered = true, 
  className = "" 
} = Astro.props;
---

<header class={`mb-12 md:mb-16 ${centered ? 'text-center' : ''} ${className}`}>
  <h2 class="text-2xl sm:text-3xl md:text-4xl font-bold text-gray-900 mb-4 md:mb-6 leading-tight">
    {highlight ? (
      <>
        {title.split(highlight)[0]}
        <span class="text-blue-700">{highlight}</span>
        {title.split(highlight)[1]}
      </>
    ) : (
      title
    )}
  </h2>
  {subtitle && (
    <p class="text-base sm:text-lg md:text-xl text-gray-600 max-w-3xl mx-auto leading-relaxed">
      {subtitle}
    </p>
  )}
</header> 