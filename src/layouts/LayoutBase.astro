          mobileMenuPanel.style.transform = 'translateX(0)';
          document.body.style.overflow = 'hidden';
          mobileMenuButton.setAttribute('aria-expanded', 'true');
          
          // Cambiar iconos
          menuIconOpen.classList.add('hidden');
          menuIconClose.classList.remove('hidden');
          console.log('Menú abierto completamente');
        }
      });
    }

    // Función para cerrar el menú
    function closeMenu() {
      if (!mobileMenu || !mobileMenuOverlay || !mobileMenuPanel || !mobileMenuButton || 
          !menuIconOpen || !menuIconClose) return;
          
      console.log('Cerrando menú móvil...');
      isMenuOpen = false;
      mobileMenuPanel.style.transform = 'translateX(100%)';
      document.body.style.overflow = '';
      mobileMenuButton.setAttribute('aria-expanded', 'false');
      
      // Ocultar completamente después de la animación
      setTimeout(() => {
        if (mobileMenuPanel && mobileMenuOverlay) {
          mobileMenuPanel.style.display = 'none';
          mobileMenuOverlay.style.display = 'none';
        }
      }, 300);
      
      // Cambiar iconos
      menuIconOpen.classList.remove('hidden');
      menuIconClose.classList.add('hidden');
    }

    // Event listeners
    mobileMenuButton.addEventListener('click', function() {
      if (isMenuOpen) {
        closeMenu();
      } else {
        openMenu();
      }
    });

    // Cerrar menú al hacer clic en overlay
    mobileMenuOverlay.addEventListener('click', closeMenu);

    // Cerrar menú con botón de cerrar
    mobileMenuClose.addEventListener('click', closeMenu);

    // Cerrar menú al hacer clic en enlaces
    mobileNavLinks.forEach(link => {
      link.addEventListener('click', closeMenu);
    });

    // Cerrar menú con tecla Escape
    document.addEventListener('keydown', function(e) {
      if (e.key === 'Escape' && isMenuOpen) {
        closeMenu();
      }
    });

    // Cerrar menú al cambiar tamaño de ventana a desktop
    window.addEventListener('resize', function() {
      if (window.innerWidth >= 1024 && isMenuOpen) {
        closeMenu();
      }
    });

    // Mejorar accesibilidad: focus trapping
    document.addEventListener('keydown', function(e) {
      if (!isMenuOpen || !mobileMenuPanel) return;
      
      if (e.key === 'Tab') {
        const focusableElements = mobileMenuPanel.querySelectorAll(
          'button, a, input, select, textarea, [tabindex]:not([tabindex="-1"])'
        );
        const firstElement = focusableElements[0] as HTMLElement;
        const lastElement = focusableElements[focusableElements.length - 1] as HTMLElement;
        
        if (e.shiftKey) {
          if (document.activeElement === firstElement && firstElement) {
            lastElement?.focus();
            e.preventDefault();
          }
        } else {
          if (document.activeElement === lastElement && lastElement) {
            firstElement?.focus();
            e.preventDefault();
          }
        }
      }
    });
  });
