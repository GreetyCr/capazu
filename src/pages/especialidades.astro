---
import LayoutBase from '../layouts/LayoutBase.astro';
import SectionTitle from '../components/SectionTitle.astro';
import EspecialidadCard from '../components/EspecialidadCard.astro';
import { especialidades } from '../data/especialidades';
---

<LayoutBase 
  title="Especialidades Técnicas - CTP Carlos Pascua Zúñiga"
  description="Catálogo completo de especialidades técnicas del CTP Carlos Pascua Zúñiga. Programas educativos acreditados por el MEP en Gestión de Calidad, Banca y Finanzas, Contabilidad y Control Interno, Desarrollo de Aplicaciones de Software, Construcción Civil y Dibujo y Modelado para Edificaciones. Educación técnica gratuita de calidad."
>
  <!-- Hero institucional -->
  <section class="relative bg-gradient-to-b from-slate-50 to-white py-20 md:py-28" role="banner">
    <!-- Elementos decorativos sutiles -->
    <div class="absolute inset-0 overflow-hidden" aria-hidden="true">
      <div class="absolute top-20 left-10 w-2 h-2 bg-slate-300 rounded-full opacity-60"></div>
      <div class="absolute top-40 right-20 w-1 h-1 bg-slate-400 rounded-full opacity-40"></div>
      <div class="absolute bottom-32 left-1/4 w-1.5 h-1.5 bg-slate-300 rounded-full opacity-50"></div>
      <div class="absolute bottom-20 right-1/3 w-2 h-2 bg-slate-300 rounded-full opacity-30"></div>
    </div>

    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
      <!-- Breadcrumb profesional -->
      <nav class="mb-12" aria-label="Navegación de migas de pan">
        <div class="flex justify-center">
          <ol class="inline-flex items-center bg-white/90 backdrop-blur-md rounded-lg px-6 py-3 shadow-sm border border-slate-200">
            <li class="flex items-center">
              <a href="/" class="flex items-center text-slate-600 hover:text-blue-700 transition-all duration-200 font-medium group">
                <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                  <path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z"></path>
                </svg>
                Inicio
              </a>
            </li>
            <li class="flex items-center">
              <svg class="w-4 h-4 text-slate-400 mx-3" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
              </svg>
              <span class="text-blue-700 font-semibold bg-blue-50 px-4 py-1.5 rounded-md text-sm">
                Especialidades Técnicas
              </span>
            </li>
          </ol>
        </div>
      </nav>

      <div class="text-center max-w-5xl mx-auto">
        <!-- Badge institucional -->
        <div class="inline-flex items-center bg-slate-100 text-slate-700 px-6 py-2.5 rounded-lg font-medium mb-8 border border-slate-200">
          <svg class="w-5 h-5 mr-2 text-blue-600" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
          </svg>
          Acreditación MEP | Programas Oficiales
        </div>

        <!-- Título principal -->
        <h1 class="text-5xl sm:text-6xl md:text-7xl font-bold text-slate-900 mb-8 leading-tight tracking-tight">
          Especialidades
          <span class="block text-blue-700 text-4xl sm:text-5xl md:text-6xl mt-2">Técnicas Profesionales</span>
        </h1>
        
        <!-- Descripción institucional -->
        <p class="text-xl sm:text-2xl text-slate-600 mb-12 leading-relaxed max-w-4xl mx-auto font-light">
          Formación técnica especializada acreditada por el Ministerio de Educación Pública, 
          diseñada para desarrollar competencias profesionales de alta calidad y formar técnicos especializados competitivos.
        </p>

        <!-- Métricas institucionales -->
        <div class="grid grid-cols-1 sm:grid-cols-3 gap-8 bg-white/80 backdrop-blur-sm rounded-2xl shadow-lg p-8 border border-slate-200 max-w-4xl mx-auto">
          <div class="text-center">
            <div class="text-4xl font-bold text-blue-700 mb-2">05</div>
            <div class="text-slate-600 font-medium uppercase tracking-wide text-sm">Especialidades</div>
          </div>
          <div class="text-center">
            <div class="text-4xl font-bold text-slate-700 mb-2">3</div>
            <div class="text-slate-600 font-medium uppercase tracking-wide text-sm">Años Académicos</div>
          </div>
          <div class="text-center">
            <div class="text-4xl font-bold text-blue-600 mb-2">+50</div>
            <div class="text-slate-600 font-medium uppercase tracking-wide text-sm">Años de Experiencia</div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Catálogo principal -->
  <section class="py-24 md:py-32 bg-white" role="main">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Header de sección -->
      <div class="text-center mb-20 max-w-4xl mx-auto">
        <h2 class="text-4xl md:text-5xl font-bold text-slate-900 mb-6 leading-tight">
          Catálogo Académico
        </h2>
        <div class="w-24 h-1 bg-blue-600 mx-auto mb-8"></div>
        <p class="text-lg text-slate-600 leading-relaxed max-w-3xl mx-auto">
          Programas educativos estructurados para formar técnicos especializados con competencias 
          específicas demandadas por los sectores productivos del país.
        </p>
      </div>

      <!-- Grid de especialidades -->
      <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-8 mb-24" role="list">
        {especialidades.map((especialidad, index) => (
          <EspecialidadCard 
            nombre={especialidad.nombre}
            descripcion={especialidad.descripcion}
            duracion={especialidad.duracion}
            modalidad={especialidad.modalidad}
            empleabilidad={especialidad.empleabilidad}
            icono={especialidad.icono}
            colores={especialidad.colores}
            index={index}
            id={especialidad.id}
          />
        ))}
      </div>

      <!-- Panel informativo institucional -->
      <div class="bg-slate-50 rounded-3xl border border-slate-200 overflow-hidden shadow-lg">
        <!-- Header institucional -->
        <div class="bg-gradient-to-r from-slate-800 to-slate-900 text-white px-8 py-6">
          <h3 class="text-2xl font-bold text-center tracking-wide">Marco Académico Institucional</h3>
        </div>
        
        <div class="p-12 lg:p-16">
          <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
            <!-- Contenido académico -->
            <div class="space-y-8">
              <h4 class="text-3xl font-bold text-slate-900 mb-8 leading-tight">
                Estructura Curricular y Metodología Académica
              </h4>
              
              <div class="space-y-8">
                <div class="flex items-start">
                  <div class="bg-blue-100 rounded-xl p-4 mr-6 mt-1 flex-shrink-0">
                    <svg class="w-6 h-6 text-blue-700" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 010-3.976 3.066 3.066 0 00.723-1.745 3.066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                    </svg>
                  </div>
                  <div>
                    <h5 class="font-bold text-slate-900 text-xl mb-3">Prácticas Profesionales Supervisadas</h5>
                    <p class="text-slate-600 leading-relaxed text-lg">
                      Mínimo 400 horas de práctica en empresas del sector, fortaleciendo la formación práctica y el desarrollo de competencias profesionales específicas.
                    </p>
                  </div>
                </div>
                
                <div class="flex items-start">
                  <div class="bg-emerald-100 rounded-xl p-4 mr-6 mt-1 flex-shrink-0">
                    <svg class="w-6 h-6 text-emerald-700" fill="currentColor" viewBox="0 0 20 20">
                      <path d="M10.394 2.08a1 1 0 00-.788 0l-7 3a1 1 0 000 1.84L5.25 8.051a.999.999 0 01.356-.257l4-1.714a1 1 0 11.788 1.838L7.667 9.088l1.94.831a1 1 0 00.787 0l7-3a1 1 0 000-1.838l-7-3zM3.31 9.397L5 10.12v4.102a8.969 8.969 0 00-1.05-.174 1 1 0 01-.89-.89 11.115 11.115 0 01.25-3.762zM9.3 16.573A9.026 9.026 0 007 14.935v-3.957l1.818.78a3 3 0 002.364 0l5.508-2.361a11.026 11.026 0 01.25 3.762 1 1 0 01-.89.89 8.968 8.968 0 00-5.35 2.524 1 1 0 01-1.4 0zM6 18a1 1 0 001-1v-2.065a8.935 8.935 0 00-2-.712V17a1 1 0 001 1z"/>
                    </svg>
                  </div>
                  <div>
                    <h5 class="font-bold text-slate-900 text-xl mb-3">Articulación con Educación Superior</h5>
                    <p class="text-slate-600 leading-relaxed text-lg">
                      Convenios vigentes con universidades públicas y privadas para la continuación de estudios superiores con reconocimiento de créditos.
                    </p>
                  </div>
                </div>
                
                <div class="flex items-start">
                  <div class="bg-slate-100 rounded-xl p-4 mr-6 mt-1 flex-shrink-0">
                    <svg class="w-6 h-6 text-slate-700" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M2.166 4.999A11.954 11.954 0 0010 1.944 11.954 11.954 0 0017.834 5c.11.65.166 1.32.166 2.001 0 5.225-3.34 9.67-8 11.317C5.34 16.67 2 12.225 2 7c0-.682.057-1.35.166-2.001zm11.541 3.708a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                    </svg>
                  </div>
                  <div>
                    <h5 class="font-bold text-slate-900 text-xl mb-3">Certificaciones Profesionales</h5>
                    <p class="text-slate-600 leading-relaxed text-lg">
                      Títulos de Técnico Medio reconocidos por el sector empresarial y avalados por organizaciones profesionales del país.
                    </p>
                  </div>
                </div>
              </div>
            </div>
            
            <!-- Panel de información institucional -->
            <div class="bg-white rounded-2xl p-10 text-center shadow-md border border-slate-200">
              <div class="w-20 h-20 bg-blue-100 rounded-2xl mx-auto mb-6 flex items-center justify-center">
                <svg class="w-10 h-10 text-blue-600" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
                </svg>
              </div>
              <h4 class="text-2xl font-bold text-slate-900 mb-4">
                Información General y Matrícula
              </h4>
              <p class="text-slate-600 mb-8 leading-relaxed">
                Acceda a información detallada sobre nuestros programas académicos, requisitos de ingreso 
                y recursos institucionales disponibles para estudiantes.
              </p>
              <div class="space-y-4">
                <button 
                  class="w-full bg-slate-900 text-white px-8 py-4 rounded-xl font-semibold hover:bg-slate-800 transition-all duration-200 shadow-lg hover:shadow-xl"
                  aria-label="Ver información de matrícula"
                >
                  Información de Matrícula
                </button>
                <button 
                  class="w-full border-2 border-slate-200 text-slate-700 px-8 py-4 rounded-xl font-semibold hover:bg-slate-50 transition-all duration-200"
                  aria-label="Descargar documentación"
                >
                  Documentación Oficial
                </button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Sección de proceso de admisión -->
  <section class="py-24 md:py-32 bg-gradient-to-b from-slate-900 to-slate-800 text-white" role="complementary">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center max-w-5xl mx-auto">
        <!-- Título principal -->
        <h2 class="text-4xl md:text-5xl font-bold mb-8 leading-tight">
          Proceso de Admisión
          <span class="block text-blue-300 mt-2">Período Académico 2025</span>
        </h2>
        <p class="text-xl text-slate-300 mb-16 leading-relaxed max-w-4xl mx-auto">
          Información oficial sobre requisitos de ingreso, cronograma de matrícula 
          y procedimientos administrativos para el próximo período académico.
        </p>

        <!-- Información de matrícula -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-16">
          <div class="bg-white/10 backdrop-blur-sm rounded-2xl border border-white/20 p-8">
            <h3 class="text-2xl font-bold text-white mb-6">Cronograma de Matrícula</h3>
            <div class="space-y-4 text-slate-200">
              <div class="flex justify-between items-center py-2 border-b border-white/10">
                <span>Período de matrícula:</span>
                <span class="font-semibold text-white">Diciembre 2024 - Febrero 2025</span>
              </div>
              <div class="flex justify-between items-center py-2 border-b border-white/10">
                <span>Inicio de clases:</span>
                <span class="font-semibold text-white">Marzo 2025</span>
              </div>
              <div class="flex justify-between items-center py-2">
                <span>Proceso de inducción:</span>
                <span class="font-semibold text-white">Primera semana de marzo</span>
              </div>
            </div>
          </div>
          
          <div class="bg-white/10 backdrop-blur-sm rounded-2xl border border-white/20 p-8">
            <h3 class="text-2xl font-bold text-white mb-6">Requisitos de Ingreso</h3>
            <div class="space-y-4 text-slate-200">
              <div class="flex justify-between items-center py-2 border-b border-white/10">
                <span>Requisito académico:</span>
                <span class="font-semibold text-white">Noveno año aprobado</span>
              </div>
              <div class="flex justify-between items-center py-2 border-b border-white/10">
                <span>Costo de matrícula:</span>
                <span class="font-semibold text-white">Gratuita</span>
              </div>
              <div class="flex justify-between items-center py-2">
                <span>Documentación:</span>
                <span class="font-semibold text-white">Certificados oficiales</span>
              </div>
            </div>
          </div>
        </div>

        <!-- Botones de acción -->
        <div class="flex flex-col sm:flex-row gap-6 justify-center">
          <a 
            href="tel:22372710"
            class="bg-white text-slate-900 px-10 py-5 rounded-xl font-bold text-lg hover:bg-slate-200 hover:text-slate-900 transition-all duration-200 shadow-lg hover:shadow-xl flex items-center justify-center space-x-3"
            aria-label="Consultar información por teléfono"
          >
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20">
              <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"></path>
            </svg>
            <span>Consultar Información</span>
          </a>
          <a 
            href="tel:22372710"
            class="border-2 border-white text-white px-10 py-5 rounded-xl font-bold text-lg hover:border-slate-300 hover:text-slate-300 transition-all duration-200 flex items-center justify-center space-x-3"
            aria-label="Ponerse en contacto por teléfono"
          >
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M18 10c0 3.866-3.582 7-8 7a8.841 8.841 0 01-4.083-.98L2 17l1.338-3.123C2.493 12.767 2 11.434 2 10c0-3.866 3.582-7 8-7s8 3.134 8 7zM7 9H5v2h2V9zm8 0h-2v2h2V9zM9 9h2v2H9V9z" clip-rule="evenodd"/>
            </svg>
            <span>Ponerse en Contacto</span>
          </a>
        </div>
      </div>
    </div>
  </section>
</LayoutBase>

<style>
  /* Animaciones sutiles y profesionales */
  @media (prefers-reduced-motion: no-preference) {
    .fade-in {
      animation: fadeIn 0.6s ease-out forwards;
    }
    
    @keyframes fadeIn {
      from {
        opacity: 0;
        transform: translateY(20px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }
  }

  /* Efectos hover elegantes */
  button:hover {
    transform: translateY(-1px);
  }

  nav a:hover {
    transform: translateY(-1px);
  }

  /* Tipografía refinada */
  h1, h2, h3, h4, h5 {
    letter-spacing: -0.025em;
  }

  /* Efectos de scroll suaves */
  html {
    scroll-behavior: smooth;
  }

  /* Mejoras en accesibilidad */
  button:focus,
  a:focus {
    outline: 2px solid rgba(59, 130, 246, 0.5);
    outline-offset: 2px;
  }
</style> 